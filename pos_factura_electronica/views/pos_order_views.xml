<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_pos_form_inherit_fe_cr" model="ir.ui.view">
        <field name="name">pos.order.form.fe.cr</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Documentos electrónicos" name="cr_fe_electronic_document">
                    <group>
                        <group>
                            <field name="cr_fe_document_kind" readonly="1"/>
                            <field name="cr_fe_payment_method" readonly="1"/>
                            <field name="cr_fe_payment_condition" readonly="1"/>
                        </group>
                    </group>
                    <field name="cr_fe_generated_move_ids" readonly="1" nolabel="1"
                           context="{'default_move_type': 'out_invoice'}"
                           options="{'no_create': True, 'no_edit': True}">
                        <list string="Documentos electrónicos generados">
                            <field name="name" string="Número"/>
                            <field name="partner_id"/>
                            <field name="invoice_date"/>
                            <field name="state"/>
                            <field name="payment_state"/>
                            <field name="amount_total"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
