<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_cr_pos_einvoice" model="ir.ui.view">
        <field name="name">account.move.form.cr.pos.einvoice</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_cr_pos_send_hacienda" type="object" string="Send to Hacienda"/>
                <button name="action_cr_pos_check_hacienda_status" type="object" string="Check Hacienda status"/>
            </xpath>
            <xpath expr="//sheet//group" position="inside">
                <field name="cr_pos_order_id" readonly="1"/>
                <field name="cr_pos_document_type" readonly="1"/>
                <field name="cr_pos_fe_state" readonly="1"/>
                <field name="cr_pos_fe_retry_count" readonly="1"/>
                <field name="cr_pos_fe_next_try" readonly="1"/>
                <field name="cr_pos_fe_last_error" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
